<%-include('./partials/header')%>
<div class="container d-flex justify-content-center " style="width: 100%;min-height:100vh;">
    <div class="row  my-5">
        <h1>Reset Password </h1>
        <% if (typeof errorMessage !== "undefined") { %>
            <p class="bg-danger text-light p-1 rounded"><%= errorMessage %></p>
            <% } %>
        <form action="" method="post">
            <input type="hidden" name="id" value="">
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password">
            </div>
            <div class="mb-3">
                <label class="form-label" for="password2">Confirm your password</label>
                <input class="form-control" type="password" name="password2" id="password2">
            </div>
            <div class="my-5">
                <input class="btn google  shadow" type="submit" value="Reset password">
            </div>
    </div>
    </form>
</div>
</div>
<%-include('./partials/footer')%>